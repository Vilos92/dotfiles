#!/usr/bin/env sh

# Set how focus is handled.
yabai -m config mouse_follows_focus on

# Set layout and window placement.
yabai -m config layout bsp
yabai -m config window_placement second_child

# Set padding for the entire space.
yabai -m config top_padding     5
yabai -m config bottom_padding  5
yabai -m config left_padding    5
yabai -m config right_padding   5

# Set window border style.
yabai -m config window_border on
yabai -m config window_border_width 2
yabai -m config active_window_border_color 0xff545454
yabai -m config normal_window_border_color 0xff333333
